<form string="IMAP Server" col="6">
    <label name="name"/>
    <field name="name"/>
    <separator id="server_info" string="Server Information" colspan="6"/>
    <label name="host"/>
    <field name="host"/>
    <label name="ssl"/>
    <field name="ssl"/>
    <label name="port"/>
    <field name="port"/>
    <label name="folder"/>
    <field name="folder"/>
    <label name="timeout"/>
    <field name="timeout"/>
    <label name="criterion"/>
    <field name="criterion"/>
    <newline/>
    <separator id="user" string="Login Information" colspan="6"/>
    <label name="email"/>
    <field name="email"/>
    <label name="user"/>
    <field name="user"/>
    <label name="password"/>
    <field name="password" widget="password"/>
    <newline/>
    <label name="state"/>
    <field name="state"/>
    <group col="4" colspan="3" id="buttons">
        <button name="draft" string="Draft" icon="tryton-clear"/>
        <button name="done" string="Confirm" icon="tryton-go-next"/>
        <button name="test" string="Test Connection" icon="tryton-ok"/>
    </group>
</form>
