<form string="IMAP Server">
    <label name="name"/>
    <field name="name"/>
    <label name="email"/>
    <field name="email"/>
    <label name="host"/>
    <field name="host"/>
    <group id="port_ssl" colspan="2">
        <label name="port"/>
        <field name="port"/>
        <label name="ssl"/>
        <field name="ssl"/>
    </group>
    <label name="username"/>
    <field name="username"/>
    <label name="password"/>
    <field name="password" widget="sha"/>
    <label name="state"/>
    <field name="state"/>
    <group id="buttons" colspan="2">
        <button name="draft" string="Draft" icon="tryton-clear"/>
        <button name="done" string="Confirm" icon="tryton-go-next"/>
        <button name="test" string="Test Connection" icon="tryton-ok"/>
    </group>
</form>
